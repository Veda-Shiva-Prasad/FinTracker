{
  "name": "fintracker",
  "version": "1.0.0",
  "description": "Personal Finance Tracker - MERN Stack",
  "main": "backend/src/index.js",
  "scripts": {
    "start": "node backend/src/index.js",
    "dev": "nodemon backend/src/index.js",
    "test": "jest --verbose --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage",
    "client": "cd frontend && live-server --port=3000"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "./backend/tests/setup.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/",
      "/frontend/"
    ],
    "testMatch": [
      "**/backend/tests/**/*.test.js"
    ]
  },
  "keywords": [
    "finance",
    "tracker",
    "mern",
    "budget"
  ],
  "author": "Your Name",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.8.4"
  },
  "devDependencies": {
    "nodemon": "^3.1.11",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "mongodb-memory-server": "^10.1.3",
    "cross-env": "^7.0.3"
  }
}
